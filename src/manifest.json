{
  "name": "Signoffer",
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons8-autograph-50.png"
  },
  "icons": {
    "128": "icons8-autograph-100.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "cookies",
    "storage"
  ]
}
